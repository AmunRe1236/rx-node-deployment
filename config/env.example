# 🎩 GENTLEMAN - Environment Configuration Example
# ═══════════════════════════════════════════════════════════════
# Kopiere diese Datei zu .env und passe die Werte an

# 🤖 LLM Configuration
LLM_MODEL=llama2-7b-chat
LLM_HOST=0.0.0.0
LLM_PORT=8001
LLM_DEVICE=cuda

# 🎤 STT Configuration
STT_MODEL=whisper-base
STT_HOST=0.0.0.0
STT_PORT=8002
STT_LANGUAGE=de

# 🔊 TTS Configuration
TTS_MODEL=neural-german
TTS_HOST=0.0.0.0
TTS_PORT=8003
TTS_VOICE=female

# 🌐 Mesh Configuration
MESH_HOST=0.0.0.0
MESH_PORT=8004
NEBULA_CONFIG_PATH=/etc/nebula

# 📧 Proton Mail Configuration
PROTON_USERNAME=amonbaumgartner@gentlemail.com
PROTON_PASSWORD=your_proton_password_here
PROTON_APP_PASSWORD=your_proton_app_password_here
PROTON_BRIDGE_HOST=127.0.0.1
PROTON_BRIDGE_IMAP_PORT=1143
PROTON_BRIDGE_SMTP_PORT=1025

# E-Mail Settings
EMAIL_FROM_NAME=Gentleman AI Assistant
EMAIL_SIGNATURE="🎩 Wo Eleganz auf Funktionalität trifft"
EMAIL_AUTO_REPLY=true
EMAIL_SMART_REPLY=true
EMAIL_CLASSIFICATION=true
EMAIL_VOICE_INTEGRATION=true

# 🏠 Home Assistant Configuration
HA_HOST=192.168.100.100
HA_PORT=8123
HA_TOKEN=your_ha_token_here
HA_WEBHOOK_ID=gentleman_webhook

# 💾 TrueNAS Configuration
TRUENAS_HOST=192.168.100.50
TRUENAS_API_KEY=your_truenas_api_key
TRUENAS_DATASET=gentleman

# 📊 Monitoring Configuration
PROMETHEUS_HOST=0.0.0.0
PROMETHEUS_PORT=9090
GRAFANA_HOST=0.0.0.0
GRAFANA_PORT=3000
GRAFANA_ADMIN_PASSWORD=gentleman123

# 🔐 Security Configuration
JWT_SECRET_KEY=your_jwt_secret_key_here
ENCRYPTION_KEY=your_encryption_key_here
API_KEY=your_api_key_here

# 🌐 Network Configuration
NETWORK_INTERFACE=eth0
VPN_ENABLED=true
FIREWALL_ENABLED=true

# 🎯 System Configuration
LOG_LEVEL=INFO
DEBUG_MODE=false
ENVIRONMENT=production 